@model IEnumerable<Bloggie.Models.ViewModels.GetPostViewModel>


@foreach (var item in Model)
{
    <li >
        <a class="list-group-item d-flex mb-2" asp-area="" asp-controller="GetDescPost" asp-action="DescriptionPost" asp-route-id ="@item.PostId">
            <img class='img-story w-15' src="@item.ImageUrl" alt="" />
            <div class='content-story'>
                <span class='dated-story d-block w-100'>@item.CreatedAt</span>
                <h2 class='mt-3'>@item.Title</h2>
                <span class='user-story'>
                    <img class='avt-user' src="@item.ImageAuthor" alt="" />
                    <span class='user-name'>@item.NameAuthor</span>
                </span>
            </div>
        </a>
    </li>
    
}
